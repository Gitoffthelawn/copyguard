{
  "transform": {
    ".+\\.(ts|tsx)$": [
      "ts-jest",
      {
        "useESM": true,
        "tsconfig": {
          "verbatimModuleSyntax": false
        }
      }
    ]
  },
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts|tsx)$",
  "moduleFileExtensions": ["ts", "js", "tsx"],
  "setupFilesAfterEnv": ["./specs/setup.ts"],
  "testEnvironment": "jsdom"
}
