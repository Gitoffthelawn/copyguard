    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": ["es2015", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist/js",
    "rootDir": ".",
    "sourceMap": true,
    "types": ["jest", "node"],
    "target": "es5"
  },
  "include": ["src/**/*"]
}
