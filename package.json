{
  "name": "copy-guard",
  "version": "1.1.0",
  "description": "A simple browser extension that warns you when your copy action is being hijacked.",
  "webExt": {
    "sourceDir": "dist/"
  },
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "build:package": "yarn build && web-ext build --overwrite-dest",
    "dev": "webpack -w --config webpack.dev.js",
    "start:firefox": "web-ext run",
    "release:chrome": "cd dist && webstore upload --auto-publish",
    "release:firefox": "cd dist && web-ext-submit",
    "lint": "eslint \"**/*.ts\"",
    "test": "jest"
  },
  "author": "Ruud SchroÃ«n",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/webextension-polyfill": "^0.8.2",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "eslint": "^7.17.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "jest": "^26.6.3",
    "jest-webextension-mock": "^3.7.19",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "web-ext": "^5.4.0",
    "webpack": "^5.12.2",
    "webpack-cli": "^4.3.1",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "webextension-polyfill": "^0.8.0",
    "webextension-polyfill-ts": "^0.22.0"
  }
}
